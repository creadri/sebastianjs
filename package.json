{
  "name": "sebastianjs",
  "version": "1.0.0",
  "description": "SebastianJS is a mermaid wrapper designed to make it able to perform server-side svg renderers without needing a headless browser.",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --runInBand",
    "cli": "node --experimental-loader ./loader.mjs ./bin/sebastianjs",
    "fetch:samples": "node ./scripts/fetch-mermaid-demos.mjs",
  "test:samples": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --config ./jest.samples.config.cjs __tests__/samples.test.js --runInBand",
  "generate:comparisons": "node --experimental-loader ./loader.mjs ./scripts/generate-comparisons.mjs"
  },
  "keywords": [
    "mermaid",
    "server-side",
    "svg"
  ],
  "author": "Adrien Nelis",
  "license": "MIT",
  "bin": {
    "sebastianjs": "bin/sebastianjs"
  },
  "dependencies": {
    "@svgdotjs/svg.js": ">=3.2.4",
    "dompurify": ">=3.2.6",
    "jsdom": ">=24.1.0",
    "mermaid": ">=10.11.10",
    "svgdom": ">=0.1.22"
  },
  "devDependencies": {
    "@babel/core": ">=7.28.3",
    "@babel/preset-env": ">=7.28.3",
    "babel-jest": ">=30.1.2",
    "jest": ">=29.7.0",
    "jest-environment-jsdom": ">=30.1.2"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "setupFiles": [
      "./jest.setup.js"
    ],
    "transformIgnorePatterns": [],
    "testPathIgnorePatterns": [
      "__tests__/samples.test.js"
    ],
    "moduleNameMapper": {
      "^dompurify$": "<rootDir>/test/dompurify-stub.js"
    }
  }
}
